<div class="flex justify-center mt-5">
    <form action="/login" method="post">
        <div class="mb-2">
            <label for="username">Username</label><br>
            <input type="text" autocomplete="off" class="rounded border text-center px-4 py-2" id="username" required
                name="username">
        </div>
        <div class="mb-2">
            <label for="password">Password</label><br>
            <input type="password" autocomplete="off" class="rounded border text-center px-4 py-2" id="password"
                required name="password">
        </div>
        <div class="mb-2">
            <input type="submit"
                class="bg-green-400 px-3 py-1 rounded text-white text-lg hover:bg-green-500 hover:cursor-pointer">
        </div>
    </form>
</div>